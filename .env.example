# =============================================================================
# CONSTRUCTION MATERIAL SHOP - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env.local and fill in your actual values.
# NEVER commit .env.local to version control.

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection URL - Use secure connection with SSL
DATABASE_URL="postgresql://username:password@hostname:5432/database?sslmode=require"

# Database connection pool settings for production
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Base URL for the application (change for production)
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Application environment
NODE_ENV="development"
NEXT_PUBLIC_NODE_ENV="development"

# Application name and version
NEXT_PUBLIC_APP_NAME="Construction Material Shop"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret for session management (MUST be changed in production)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-very-secure-jwt-secret-here-64-chars-minimum"

# JWT Configuration
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-here-32-chars-minimum"
NEXTAUTH_URL="http://localhost:3000"

# Session configuration
SESSION_SECRET="your-session-secret-here-32-chars-minimum"

# CSRF Protection
CSRF_SECRET="your-csrf-secret-here-32-chars-minimum"

# =============================================================================
# GITHUB INTEGRATION
# =============================================================================
# GitHub OAuth Configuration (get from GitHub Developer Settings)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# GitHub Webhook Configuration
GITHUB_WEBHOOK_SECRET="your-webhook-secret-here"

# GitHub API Access Token (use fine-grained token with minimal permissions)
GITHUB_ACCESS_TOKEN="your-github-access-token"

# GitHub API Configuration
GITHUB_API_BASE_URL="https://api.github.com"
GITHUB_WEBHOOK_PATH="/api/webhooks/github"

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# API Timeouts
API_TIMEOUT=30000
DATABASE_TIMEOUT=10000

# =============================================================================
# SECURITY HEADERS & CSP
# =============================================================================
# Content Security Policy (additional allowed domains)
CSP_EXTRA_DOMAINS=""

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"
CORS_CREDENTIALS=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=63072000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Application logging level
LOG_LEVEL="debug"
LOG_FORMAT="json"

# Performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_MONITORING_SAMPLE_RATE=1.0

# Error tracking (add your error tracking service)
ERROR_TRACKING_DSN=""
SENTRY_DSN=""

# Analytics (add your analytics service)
ANALYTICS_ID=""
GOOGLE_ANALYTICS_ID=""

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# Development features
ENABLE_SWAGGER_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service (for notifications, password reset, etc.)
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_SMTP_HOST=""
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=""
EMAIL_SMTP_PASS=""

# File upload configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# CDN Configuration (for production)
CDN_URL=""
CDN_BUCKET=""

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Hot reload and development server
NEXT_TELEMETRY_DISABLED=false
TURBOPACK=true

# TypeScript and ESLint
TSC_STRICT=true
ESLINT_NO_DEV_ERRORS=false

# Testing
TEST_ENV="development"
JEST_VERBOSE=true
JEST_COVERAGE_THRESHOLD_GLOBAL_BRANCHES=80
JEST_COVERAGE_THRESHOLD_GLOBAL_FUNCTIONS=80
JEST_COVERAGE_THRESHOLD_GLOBAL_LINES=80
JEST_COVERAGE_THRESHOLD_GLOBAL_STATEMENTS=80
NODE_ENV="development"

# JWT Secret for session management
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET="your-very-secure-jwt-secret-here-change-in-production"

# NextAuth Configuration (optional, for future OAuth features)
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# GitHub OAuth Configuration
# Create OAuth App at: https://github.com/settings/applications/new
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# GitHub Webhook Configuration (for GitHub integration)
GITHUB_WEBHOOK_SECRET="your-webhook-secret-here"

# GitHub Personal Access Token (for API calls)
# Create at: https://github.com/settings/tokens
GITHUB_ACCESS_TOKEN="ghp_your_personal_access_token"

# Email Configuration (optional, for future features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Analytics & Monitoring (optional)
# NEXT_PUBLIC_GA_ID="GA_MEASUREMENT_ID"
# SENTRY_DSN="your-sentry-dsn"

# Performance & Development
# Set to 'true' to enable bundle analyzer
# ANALYZE="false"