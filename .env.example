# ===========================================
# Construction Material Shop - Environment Variables
# ===========================================

# Database Configuration
# PostgreSQL database URL - Get from Neon, Supabase, or local PostgreSQL
DATABASE_URL="postgresql://username:password@hostname:5432/database?sslmode=require"

# Application Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NODE_ENV="development"

# JWT Secret for session management
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET="your-very-secure-jwt-secret-here-change-in-production"

# NextAuth Configuration (optional, for future OAuth features)
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# GitHub OAuth Configuration
# Create OAuth App at: https://github.com/settings/applications/new
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# GitHub Webhook Configuration (for GitHub integration)
GITHUB_WEBHOOK_SECRET="your-webhook-secret-here"

# GitHub Personal Access Token (for API calls)
# Create at: https://github.com/settings/tokens
GITHUB_ACCESS_TOKEN="ghp_your_personal_access_token"

# Email Configuration (optional, for future features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Analytics & Monitoring (optional)
# NEXT_PUBLIC_GA_ID="GA_MEASUREMENT_ID"
# SENTRY_DSN="your-sentry-dsn"

# Performance & Development
# Set to 'true' to enable bundle analyzer
# ANALYZE="false"